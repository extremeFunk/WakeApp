<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="5.0" stylesheets="@../../css/Style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="title" text="Singup" />
      <HBox alignment="CENTER_LEFT">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="usernameTxtField" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="emailTxtField" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="passwordTxtField" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="141.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password confirm:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="passwordConfirmTxtField" />
         </children>
      </HBox>
      <AnchorPane>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </AnchorPane>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="goBackButton" minWidth="70.0" mnemonicParsing="false" text="Go back" />
            <Button fx:id="singupButton" minWidth="70.0" mnemonicParsing="false" text="Singup" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
