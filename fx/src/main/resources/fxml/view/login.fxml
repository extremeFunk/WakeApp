<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="5.0" stylesheets="@../../css/Main.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="title" text="Login" />
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Username:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <TextField fx:id="userNameTF" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Label text="Password:" HBox.hgrow="NEVER" />
            <Region minWidth="20.0" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="passwordTF" />
         </children>
      </HBox>
      <AnchorPane>
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
         <children>
            <CheckBox fx:id="isRMCB" mnemonicParsing="false" text="Remember me" AnchorPane.leftAnchor="0.0" />
         </children>
      </AnchorPane>
      <AnchorPane maxWidth="150.0">
         <children>
            <Button fx:id="singupBtn" minWidth="70.0" mnemonicParsing="false" text="Singup" AnchorPane.leftAnchor="0.0" />
            <Button fx:id="loginBtn" layoutX="80.0" minWidth="70.0" mnemonicParsing="false" text="Login" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
      <Button fx:id="forgotPasswordBtn" mnemonicParsing="false" prefHeight="6.0" prefWidth="151.0" style="-fx-background-color: 000;" text="forgot  password" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
