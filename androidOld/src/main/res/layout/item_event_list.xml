<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:layout_editor_absoluteY="81dp">

    <TextView
            android:id="@+id/eventItemVol"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="%100"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintStart_toStartOf="@+id/textView14"/>

    <TextView
            android:id="@+id/textView14"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume:"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/eventItemDelay"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>

    <TextView
            android:id="@+id/textView5"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delay"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/eventItemDelay"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0 min."
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>

    <TextView
            android:id="@+id/textView7"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound:"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/textView5" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>

    <TextView
            android:id="@+id/eventItemSound"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bells"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"/>

    <TextView
            android:id="@+id/textView9"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device:"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView14"/>

    <TextView
            android:id="@+id/eventItemDevice"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="my device"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"/>

    <TextView
            android:id="@+id/textView11"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snooze"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView14"/>

    <TextView
            android:id="@+id/eventItemSnooze"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12 min."
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"/>

    <TextView
            android:id="@+id/textView13"
            android:theme="@style/AppTheme.Title"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shutoff:"
            android:textSize="18sp"
            android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"/>

    <TextView
            android:id="@+id/eventItemShutoff"
            android:theme="@style/EventValueTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="90 min."
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13"/>
    <!--android:layout_width="48"-->
    <!--android:layout_height="48"-->
    <Button
            android:id="@+id/eventItemDeleteBtn"
            android:backgroundTint="@color/colorIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_delete_forever_black_24dp"
            app:layout_constraintTop_toTopOf="@+id/textView13" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/eventItemEditBtn"
            android:backgroundTint="@color/colorIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_btn"
            app:layout_constraintTop_toTopOf="@+id/eventItemDeleteBtn"
            app:layout_constraintEnd_toStartOf="@+id/eventItemDeleteBtn" android:layout_marginEnd="8dp"
            android:layout_marginTop="4dp"/>

</android.support.constraint.ConstraintLayout>