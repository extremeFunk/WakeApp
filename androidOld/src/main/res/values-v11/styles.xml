<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/colorIcon</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/offWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@color/offWhite</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/event_itm_txt_size</item>
    </style>
    <style name="EventValueTxt">
        <item name="android:textSize">@dimen/event_itm_txt_size</item>
    </style>
    <style name="IconBtn">
        <item name="android:background">@color/colorIcon</item>
        <item name="background">@color/colorIcon</item>
    </style>

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <!--<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->


</resources>
